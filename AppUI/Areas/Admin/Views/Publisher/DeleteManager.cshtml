@model ExistentManagerDto

@{
    ViewData["Title"] = "Confirm removal";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to disassociate the manager from the publisher?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteManager">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remove" class="btn btn-danger" /> | <partial name="_BackToList" />
    </form>
</div>
