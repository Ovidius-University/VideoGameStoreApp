@model IEnumerable<ExistentWorkHourDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Work schedule for orders</h1>

<div class="col-md-6">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartHour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndHour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsWorkDay)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndHour)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsWorkDay)
                        </td>
                        <td>
                            @*<a asp-action="Orders" asp-route-id="@item.Id">Orders</a> |*@
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">There is no registered day schedule!</p>
    }
    @await Html.PartialAsync("_MessageResponse","MessageWorkHour")
</div>