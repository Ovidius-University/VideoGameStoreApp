@model ExistentSpecialDayDto

@{
    ViewData["Title"] = "Confirm deletion";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete the special day?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Day
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)/@Html.DisplayFor(model => model.Month)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsWorkDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsWorkDay)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> | <partial name="_BackToList" />
    </form>
</div>
