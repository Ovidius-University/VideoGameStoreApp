@model EmployeeScheduleVm

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to remove this work day schedule for the employee?</h1>
<h2>Employee: @Html.DisplayFor(m => Model.Employee)</h2>
<h2>Work day: @Html.DisplayFor(m => Model.Day)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartHour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartHour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndHour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndHour)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-eid="@Model.EmployeeId" asp-route-did="@Model.DayId">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="hidden" asp-for="DayId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>
