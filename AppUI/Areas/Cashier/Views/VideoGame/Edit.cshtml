@model VideoGameEditDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Video Game Stock</h1>

<h3>Title: @Html.DisplayFor(m => Model.ExistentVideoGame!.Title)</h3>
<h3>Price: @Html.DisplayFor(m => Model.ExistentVideoGame!.Price) RON</h3>
<hr />
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExistentVideoGame!.Id" />
            <input type="hidden" asp-for="ExistentVideoGame!.Title" />
            <input type="hidden" asp-for="ExistentVideoGame!.Price" />
            <div class="row">
                <div class="form-group mb-4">
                    <label asp-for="ExistentVideoGame!.Stock" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.Stock" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.Stock" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>List of developers</h4>
        @if (Model.ListDevelopers!.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.ListDevelopers.FirstOrDefault()!.FullName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListDevelopers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">There is no registered developer!</p>
        }
    </div>
</div>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
