@model VideoGameEditDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editing</h1>

<h4>@Html.DisplayFor(m=>Model.ExistentVideoGame!.Title)</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExistentVideoGame!.Id" />
            <div class="row">
                <div class="form-group mb-3">
                    <label asp-for="ExistentVideoGame!.Title" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.Title" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ExistentVideoGame!.Description" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.Description" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ExistentVideoGame!.GenreId" class="control-label"></label>
                    <select asp-for="ExistentVideoGame!.GenreId" asp-items="@ViewBag.ExistentGenres" class="form-control"></select>
                    <span asp-validation-for="ExistentVideoGame!.GenreId" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentVideoGame!.Price" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.Price" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentVideoGame!.ReleaseYear" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.ReleaseYear" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.ReleaseYear" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ExistentVideoGame!.Stock" class="control-label"></label>
                    <input asp-for="ExistentVideoGame!.Stock" class="form-control" />
                    <span asp-validation-for="ExistentVideoGame!.Stock" class="text-danger"></span>
                </div>
                <div class="form-group form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ExistentVideoGame!.IsFinal" /> @Html.DisplayNameFor(model => model.ExistentVideoGame!.IsFinal)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h4>List of developers</h4>
        @if (Model.ListDevelopers!.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.ListDevelopers.FirstOrDefault()!.FullName)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListDevelopers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">There is no registered developer!</p>
        }
    </div>
</div>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
