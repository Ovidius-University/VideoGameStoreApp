@model IEnumerable<ShortDeveloperVm>

@{
    ViewData["Title"] = "List of Developers";
}
<div class="col-md-6">
    <h1>@ViewBag.Title</h1>

    <p>
        <a asp-action="Create" class="btn btn-sm btn-outline-success">Add a developer</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DeveloperId">Edit</a> |
                        <a asp-action="AddVideoGame" asp-route-id="@item.DeveloperId">Add Video Game</a> |
                        <a asp-action="RemoveVideoGame" asp-route-id="@item.DeveloperId">Remove Video Game</a> |
                        <a asp-action="Details" asp-route-id="@item.DeveloperId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DeveloperId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @await Html.PartialAsync("_MessageResponse", "MessageDeveloper")
</div>