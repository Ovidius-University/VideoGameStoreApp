@model DeveloperAddVideoGameDto

<h4>Remove a Video Game for <strong>@Model.Developer</strong></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="RemoveVideoGame" asp-route-id="@Model.DeveloperId">
            <input type="hidden" asp-for="DeveloperId" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="VideoGameId" class="control-label"></label>
                <select asp-for="VideoGameId" asp-items="@ViewBag.AcquiredVideoGames" class="form-control"></select>
                <span asp-validation-for="VideoGameId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Disassociate Video Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <partial name="_BackToList" /> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
