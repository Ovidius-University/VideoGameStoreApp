@model List<CardReviewVm>
<section class="row">
    <article class="me-2">
        <h4>Reviews</h4>
    </article>
    <section class="row">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <article class="col-4 mb-3">
                    @await Html.PartialAsync("Review/_Card", item)
                </article>
            }
        }
        else
        {
            <article class="alert alert-warning" role="alert">There is no written review!</article>
        }
    </section>
</section>