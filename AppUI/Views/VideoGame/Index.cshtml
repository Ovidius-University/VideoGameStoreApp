@model List<CardVideoGameVm>
<section class="row">
    <article class="me-2">
        <h4>Video Games</h4>
    </article>
    <section class="row">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <article class="col-4 mb-3">
                    @await Html.PartialAsync("VideoGame/_Card", item)
                </article>
            }
        }
        else
        {
            <article class="alert alert-warning" role="alert">There is no registered video game!</article>
        }
    </section>
</section>